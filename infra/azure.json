{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "webAppName": {
      "type": "string",
      "metadata": {
        "description": "Web Application Name"
      }
    },
    "environment": {
      "type": "string",
      "metadata": {
        "description": "Environment"
      }
    },
    "region": {
      "type": "string",
      "metadata": {
        "description": "azure region"
      }
    }
  },
  "variables": {},
  "resources": [
    {
      "name": "[concat('ghu22-', parameters('webAppName'), '-', parameters('environment'))]",
      "type": "Microsoft.Web/sites",
      "apiVersion": "2016-08-01",
      "location": "[parameters('region')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', concat('ghu22-plan',parameters('environment'), uniqueString(resourceGroup().name))]"
      ],
      "properties": {
        "name": "[concat('ghu22-', parameters('webAppName'), '-', parameters('environment'))]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', concat('ghu22-plan',parameters('environment'), uniqueString(resourceGroup().name))]"
      }
    },
    {
      "name": "[concat('ghu22-plan',parameters('environment'), uniqueString(resourceGroup().name)]",
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2018-02-01",
      "location": "[parameters('region')]",
      "sku": {
        "name": "B1",
        "capacity": 1
      },
      "tags": {
        "displayName": "demo"
      },
      "properties": {
        "name": "[concat('ghu22-plan',parameters('environment'), uniqueString(resourceGroup().name)]"
      }
    }
  ],
  "outputs": {},
  "functions": []
}
